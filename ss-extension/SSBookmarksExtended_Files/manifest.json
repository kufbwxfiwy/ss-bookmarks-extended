{
  "manifest_version": 2,

  "name": "SS Bookmarks - Extended",
  "short_name": "SSB",
  "description": "SS Bookmarks - Extended Browser Utility",
  "version": "2.0.0",
  "icons": {
    "48": "icons/bookmarks-48.png"
  },

  "author" : "Kufbwxfiwy",

  "offline_enabled": true,

  "permissions":[
    "<all_urls>",
    "bookmarks",
    "activeTab",
    "storage",
    "tabs"
  ],

  "applications": {
      "gecko": {
          "id": "ss-bookmarks-extended@mozilla.org",
          "strict_min_version": "42.0"
      }
  },

  "background": {
      "scripts": ["popup/background.js"]
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/bookmarks-19.png",
      "38": "icons/bookmarks-19.png"
    },
    "default_title": "SS Bookmarks - Extended",
    "default_popup": "popup/ss_bookmarks.html"
  },

  "minimum_chrome_version": "41"
}
